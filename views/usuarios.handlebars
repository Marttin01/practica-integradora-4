<h2>Usuarios</h2>

<form action="" id="formDelete">
<h3>Eliminar usuario</h3>

<label for="email">Email </label><input type="email" id="input_email" placeholder="email">
<button type="submit">Eliminar el usuario</button>



</form>

<br>
{{#if hayUsuarios}}
<ul style="list-style: none;">
    {{#each usuarios}}
    <li>Nombre: {{this.first_name}}</li>
    <li>Edad: {{this.age}}</li>
    <li>Email: {{this.email}}</li>
    <li>Rol: {{this.rol}}</li>
    <li>Carrito: {{this.cart}}</li>
    <li>Ultima conexion: {{this.last_connection}}</li>
    <br>
    {{/each}}
</ul>
<a href="http://localhost:8080/perfil">Volver al perfil</a>
{{else}}
<p>No hay datos</p>
{{/if}}

<script src="js/usuarios.js"></script>